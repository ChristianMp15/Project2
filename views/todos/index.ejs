<!DOCTYPE html>
<html lang="en">
    <link rel="stylesheet" href="./styles.css">
    <%- include('../partials/head.ejs') %>

    <body>
        <%- include('../partials/header.ejs') %>


        <main>
            <div class="container">
                <a>
                    <form action="/todos" method="POST" autocomplete="off">
                        <input type="text" placeholder="Add plan" name="name" required>
                       
                      <a href="/todos/new " > <button type="submit">Add New Plan</button>
                    </form>


                   
                </a>
             <% todos.forEach((todo, index) => { %>  
                <a href="/todos/<%= todo.id  %> ">
                   
                    <h3><%= todo.name  %> - <button><%= todo.isComplete? "Complete" : "Not Completed"  %> </h3> %> </a>
                </button>

             <% }) %>



                
                
                
                
            </div>
        </main>
    </body>
</html>